@using LiveChartsCore.Kernel
@using LiveChartsCore.Themes
@using MaterialColorUtilities.Palettes
@using MaterialColorUtilities.Schemes
@using MaterialColorUtilities.Utils
@using SkiaSharp
@using Environment = Environment
@inherits LayoutComponentBase

@inject Configuration Configuration
@inject ThemeService ThemeService
@inject HttpClient HttpClient

<CustomThemeProvider @ref="themeProvider" Theme="theme" @bind-IsDarkMode="@ThemeService.IsDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar Elevation="1">
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" Class="mr-4" OnClick="() => drawerOpen = !drawerOpen" />
		<MudImage Style="height: calc(100% - 16px)" Src="data:image/webp;base64,"></MudImage>
		<MudText Typo="Typo.h5" Class="ml-3">Rocket Explorer @(Configuration.Environment != Environment.Mainnet ? $"({Configuration.Environment})" : "")</MudText>
		<MudSpacer />
		<MudTooltip Text="@(DarkLightModeButtonText)">
			<MudIconButton Icon="@(DarkLightModeButtonIcon)" Color="Color.Inherit" OnClick="() => ThemeService.CycleDarkLightMode()" aria-label="@(DarkLightModeButtonText)" />
		</MudTooltip>
	</MudAppBar>
	<MudDrawer @bind-Open="@drawerOpen">
		<NavMenu />
	</MudDrawer>
	<MudMainContent>
		<CascadingValue Value="@themeProvider">
			<MudContainer MaxWidth="MaxWidth.Large" Class="mt-8 mb-16">@Body</MudContainer>
		</CascadingValue>
	</MudMainContent>
</MudLayout>

@code{
	private MudThemeProvider themeProvider = null!;
	private MudTheme theme = null!;

	private bool drawerOpen = true;
	private byte[] roboto = [];

	public string DarkLightModeButtonText => ThemeService.CurrentDarkLightMode switch
	{
		DarkLightMode.Dark => "Use system mode",
		DarkLightMode.Light => "Use dark mode",
		_ => "Use light mode",
	};

	public string DarkLightModeButtonIcon => ThemeService.CurrentDarkLightMode switch
	{
		DarkLightMode.Dark => Icons.Material.Rounded.AutoMode,
		DarkLightMode.Light => Icons.Material.Outlined.DarkMode,
		_ => Icons.Material.Filled.LightMode,
	};

	public bool IsDarkMode { get; set; }

	protected override async Task OnInitializedAsync()
	{
		await base.OnInitializedAsync();

		uint color = ColorUtils.ArgbFromRgb(255, 110, 48);
		Scheme<uint> lightScheme = new LightSchemeMapper().Map(CorePalette.Of(color, Style.Vibrant));
		Scheme<uint> darkScheme = new DarkSchemeMapper().Map(CorePalette.Of(color, Style.Vibrant));

		CorePalette markPalette = CorePalette.Of(ColorUtils.ArgbFromRgb(255, 238, 153), Style.Vibrant);
		Scheme<uint> markLightScheme = new LightSchemeMapper().Map(markPalette);
		Scheme<uint> markDarkScheme = new DarkSchemeMapper().Map(markPalette);

		theme = new MudTheme
		{
			PaletteLight = new CustomPaletteLight
			{
				AppbarBackground = StringUtils.HexFromArgb(lightScheme.Primary),
				AppbarText = StringUtils.HexFromArgb(lightScheme.OnPrimary),
				Primary = StringUtils.HexFromArgb(lightScheme.Primary),
				OnPrimary = StringUtils.HexFromArgb(lightScheme.OnPrimary),
				PrimaryContainer = StringUtils.HexFromArgb(lightScheme.PrimaryContainer),
				OnPrimaryContainer = StringUtils.HexFromArgb(lightScheme.OnPrimaryContainer),
				Secondary = StringUtils.HexFromArgb(lightScheme.OnSecondaryContainer),
				SecondaryContrastText = StringUtils.HexFromArgb(lightScheme.SecondaryContainer),
				Tertiary = StringUtils.HexFromArgb(markLightScheme.OnPrimaryContainer),
				TertiaryContrastText = StringUtils.HexFromArgb(markLightScheme.PrimaryContainer),
			},
			PaletteDark = new CustomPaletteDark
			{
				AppbarBackground = StringUtils.HexFromArgb(darkScheme.Primary),
				AppbarText = StringUtils.HexFromArgb(darkScheme.OnPrimary),
				Primary = StringUtils.HexFromArgb(darkScheme.Primary),
				OnPrimary = StringUtils.HexFromArgb(darkScheme.OnPrimary),
				PrimaryContainer = StringUtils.HexFromArgb(darkScheme.PrimaryContainer),
				OnPrimaryContainer = StringUtils.HexFromArgb(darkScheme.OnPrimaryContainer),
				Secondary = StringUtils.HexFromArgb(darkScheme.OnSecondaryContainer),
				SecondaryContrastText = StringUtils.HexFromArgb(darkScheme.SecondaryContainer),
				Tertiary = StringUtils.HexFromArgb(markDarkScheme.OnPrimaryContainer),
				TertiaryContrastText = StringUtils.HexFromArgb(markDarkScheme.PrimaryContainer),
			},
		};

		ThemeService.CurrentTheme = theme;
		ThemeService.DarkModeChanged += (_, _) => { SetLiveChartsTheme(); };

		SetLiveChartsTheme();

		LiveCharts.DefaultSettings.HasGlobalSKTypeface(SKTypeface.FromStream(new MemoryStream(await HttpClient.GetByteArrayAsync("fonts/roboto.ttf"))));
	}

	private void SetLiveChartsTheme()
	{
		if (ThemeService.IsDarkMode)
		{
			SetLiveChartsDarkTheme();
		}
		else
		{
			SetLiveChartsLightTheme();
		}
	}

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		await base.OnAfterRenderAsync(firstRender);

		if (firstRender)
		{
			await themeProvider.WatchSystemPreference(ThemeService.OnSystemPreferenceChanged);
		}
	}

	private void SetLiveChartsLightTheme()
	{
		LiveCharts.DefaultSettings.HasTheme(
			_ =>
			{
				LiveChartsSettings defaultSettings = new();

				LiveCharts.DefaultSettings.TooltipBackgroundPaint = defaultSettings.TooltipBackgroundPaint;
				LiveCharts.DefaultSettings.TooltipTextPaint = defaultSettings.TooltipTextPaint;
				LiveCharts.DefaultSettings.LegendTextPaint = defaultSettings.LegendTextPaint;
			});

		LiveCharts.DefaultSettings.AddLightTheme(
			chartsTheme =>
			{
				chartsTheme.Colors = [ThemeService.CurrentPalette.Primary.ToLvcColor(), ThemeService.CurrentPalette.Secondary.ToLvcColor(),];
				chartsTheme.HasRuleForLineSeries(
					rule =>
					{
						rule.Stroke!.StrokeThickness = 3.0f;

						rule.GeometrySize = 10;
						rule.GeometryStroke!.StrokeThickness = 3.0f;
					});
			});
	}

	private void SetLiveChartsDarkTheme() =>
		LiveCharts.DefaultSettings.AddDarkTheme(chartsTheme =>
		{
			chartsTheme.Colors = [ThemeService.CurrentPalette.Primary.ToLvcColor(), ThemeService.CurrentPalette.Secondary.ToLvcColor(),];
			chartsTheme.HasRuleForLineSeries(
				rule =>
				{
					rule.Stroke!.StrokeThickness = 3.0f;

					rule.GeometrySize = 10;
					rule.GeometryStroke!.StrokeThickness = 3.0f;
				});
		});

}